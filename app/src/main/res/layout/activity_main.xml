<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tibaes.tictactoemanual.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="novo jogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_new"
            android:background="#004D40"
            android:layout_margin="6dp"
            android:textSize="36sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:textColor="#FFF"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:gravity="center_horizontal"
            android:columnWidth="90dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth">

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_one"
                android:layout_column="0"
                android:layout_row="0"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="#FFF" />

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_two"
                android:layout_column="1"
                android:layout_row="0"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_three"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="0"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_four"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_five"
                android:textAlignment="center"
                android:layout_column="1"
                android:layout_row="1"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_six"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="1"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_eight"
                android:textAlignment="center"
                android:layout_column="1"
                android:layout_row="2"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_nine"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="2"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>

            <TextView
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:id="@+id/txt_pos_seven"
                android:textAlignment="center"
                android:layout_column="0"
                android:layout_row="2"
                android:background="#009688"
                android:layout_margin="6dp"
                android:textSize="48sp"
                android:textStyle="normal|bold"
                android:textColor="#FFF"/>
        </GridLayout>
    </LinearLayout>


</RelativeLayout>
